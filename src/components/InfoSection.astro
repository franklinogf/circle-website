---
import Button from '../components/Button.astro'
import { Image } from 'astro:assets'

interface Props {
  badgeText: string
  paragraphs: string[]
  buttonText: string
  img: ImageMetadata
}
const { badgeText, paragraphs, buttonText, img } = Astro.props
---

<section class='w-100 flex justify-center items-center gap-x-28 py-10'>
  <div class='w-1/5 space-y-5'>
    <span class='text-[10px] uppercase'>{badgeText}</span>
    <slot name='title' />
    {paragraphs.map((paragraph) => <p class='text-xs text-gray-700/80'>{paragraph}</p>)}
    <Button>{buttonText}</Button>
  </div>
  <div class='w-1/4'>
    <Image
      class='rounded-2xl'
      src={img}
      alt={badgeText}
    />
  </div>
</section>
