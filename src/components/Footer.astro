---
import Logo from '../icons/Logo.astro'
import FooterList from './FooterList.astro'

const products = ['Delta', 'Sigma', 'Zeta', 'Alpha', 'Acumen']
const resources = ['Help', 'Training Videos', 'Webinars', 'Request a Demo', 'Create Surveys']
const company = ['About Us', 'Careers', 'Team', 'Contact Us']
---

<footer class='py-10 px-16 bg-gray-900/90 grid grid-cols-[2fr_1fr_1fr_1fr]'>
  <div class='grid place-content-center'>
    <Logo
      class='size-36'
      textClass='fill-white'
    />
  </div>
  <div class='space-y-6'>
    <FooterList
      title='Products'
      items={products}
    />
  </div>
  <div class='space-y-6'>
    <FooterList
      title='Resources'
      items={resources}
    />
  </div>
  <div class='space-y-6'>
    <FooterList
      title='Company'
      items={company}
    />
  </div>
</footer>
